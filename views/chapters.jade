div(id = "chapter-nav")
	h4(style = "text-align:center") Chapters
	ul
		li
			a(href="#", id="01-history_of_pi" class="chapter-link") A History of Pi
		li
			a(href="#", id="02-the_origins-of-beer" class="chapter-link") Origins of Beer
		li
			a(href="#", id="03-phi_golden_ratio" class="chapter-link") Phi the Golden Ratio

div(id="chapter")
	h2(id="title")
	p(id="content")

script.
	var app = require("./lib/app");
	var showChapter = function(id){
		app.emit("chapter-selected", id);
	};

	app.on("chapter-rendered", function(chapter){
		$("#title").html(chapter.title);
		$("#content").html(chapter.body);
	});

	$(function(){
		showChapter("01-history_of_pi");
		$(".chapter-link").on("click", function(ev){
			ev.preventDefault();
			showChapter(this.id);
		});
	});